[flake8]
select = B,C,E,F,P,T4,W,B9
# F401 - imported but unused
# C901 - complexity
# E722 do not use bare 'except'
ignore = E203, E266, E501, W503, C901, E722, B001
max-complexity = 10
max-line-length = 120
# to avoid import unused in __init__.py
per-file-ignores =
    __init__.py:F401
exclude =
    .git,
    __pycache__,
    tests
